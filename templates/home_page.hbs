{{!-- Hero block --}}
<section id="main-content" class="section hero {{#is settings.hero_show_image 'yes'}}hero_show{{/is}} {{#is settings.hero_show_image 'no'}}border-top{{/is}}">
    <div class="hero-inner">
        <h2 class="visibility-hidden">{{ t 'search' }}</h2>
        <h1 class="welcome_text element-fade animate__animated">{{ help_center.name }}</h1>
        {{!-- Search bar --}}
        {{search instant=settings.instant_search class='search search-full' placeholder=settings.search_placeholder}}
    </div>
</section>

<div class="container">
    <section class="section knowledge-base">
        <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
        <section class="categories blocks">
            {{!-- Categories blocks --}}
            <ul class="blocks-list">
                {{#each categories}}
                    {{#if ../has_multiple_categories}}
                        <li class="blocks-item" id="{{id}}">
                            <a href='{{url}}' class="blocks-item-link">
                                <span class="category-icon" id="category--{{id}}"><i class="fa-solid fa-book-open-reader"></i></span>
                                <span class="blocks-item-title element-fade animate__animated">{{name}}</span>
                            </a>
                        </li>
                    {{else}}
                        {{#each sections}}
                            <li class="blocks-item" id="{{id}}">
                                <a href='{{url}}' class="blocks-item-link">
                                    <span class="category-icon" id="category--{{id}}"><i class="fa-solid fa-book-open-reader"></i></span>
                                    <span class="blocks-item-title element-fade animate__animated">{{name}}</span>
                                </a>
                            </li>
                        {{/each}}
                    {{/if}}
                {{/each}}
            </ul>


            {{#if settings.enable_tiles}}
                <ul class="blocks-list helpcenter-tiles">
                {{#if settings.enable_tile_remindo}}
                    <li class="blocks-item">
                        <a href="https://support.remindo.com/hc" class="blocks-item-link tile-remindo">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-remindo-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">Remindo</span>
                        </a>
                    </li>
                {{/if}}
                {{#if settings.enable_tile_skillsly}}
                    <li class="blocks-item">
                        <a href="https://support.skillsly.com/hc" class="blocks-item-link tile-skillsly">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-skillsly-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">Skillsly</span>
                        </a>
                    </li>
                    {{/if}}
                {{#if settings.enable_tile_gradework}}
                    <li class="blocks-item">
                        <a href="https://support.gradework.com/hc" class="blocks-item-link tile-gradework">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-gradework-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">GradeWork</span>
                        </a>
                    </li>
                {{/if}}
                {{#if settings.enable_tile_onstage}}
                    <li class="blocks-item">
                        <a href="https://support.onstagesoftware.com/hc" class="blocks-item-link tile-onstage">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-onstage-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">OnStage</span>
                        </a>
                    </li>
                {{/if}}
                {{#if settings.enable_tile_ontrac}}
                    <li class="blocks-item">
                        <a href="https://support.ontracsoftware.com/hc" class="blocks-item-link tile-ontrac">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-ontrac-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">OnTrac</span>
                        </a>
                    </li>
                {{/if}}
                {{#if settings.enable_tile_ompt}}
                    <li class="blocks-item">
                        <a href="https://support.omptest.com/hc" class="blocks-item-link tile-ompt">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-ompt-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">OMPT</span>
                        </a>
                    </li>
                {{/if}}
                {{#if settings.enable_tile_sowiso}}
                    <li class="blocks-item">
                        <a href="https://support.sowiso.com" class="blocks-item-link tile-sowiso">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-sowiso-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">Sowiso</span>
                        </a>
                    </li>
                {{/if}}
                {{#if settings.enable_tile_coachview}}
                    <li class="blocks-item">
                        <a href="https://support.coachview.com" class="blocks-item-link tile-coachview">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-coachview-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">Coachview</span>
                        </a>
                    </li>
                {{/if}}
                {{#if settings.enable_tile_integrations}}
                    <li class="blocks-item">
                        <a href="https://integrations.paragin.com/hc" class="blocks-item-link tile-paraginintegrations">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-paraginintegrations-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">Integrations</span>
                        </a>
                    </li>
                {{/if}}
                {{#if settings.enable_tile_b3net}}
                    <li class="blocks-item">
                        <a href="https://support.b3net.nl/hc" class="blocks-item-link tile-b3net">
                            <span class="category-icon" style="background: #fff url({{asset 'icon-b3net-transparent.png'}}) no-repeat 100%/100%;">&nbsp;</span>
                            <span class="blocks-item-title">B3net</span>
                        </a>
                    </li>
                {{/if}}
                </ul>
            {{/if}}

            {{pagination}}
        </section>

        <section class="quick-articles {{#is settings.icon_with_title 'no'}}hide--icon{{/is}} element-fade animate__animated">

            {{!-- Promoted article block --}}
            {{#is settings.toggle_promoted_articles "yes"}}
                {{#if promoted_articles}}
                    <section class="articles">
                        <h2>{{t 'promoted_articles'}}</h2>
                        <ul class="promoted-articles">
                            {{#each promoted_articles}}
                                <li class="promoted-articles-item">
                                    <a href="{{url}}">
                                        {{title}}

                                        {{#if internal}}
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" class="icon-lock" title="{{t 'internal'}}">
                                                <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1"/>
                                                <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 017 0v3.5"/>
                                            </svg>
                                        {{/if}}
                                    </a>
                                </li>
                            {{/each}}
                        </ul>
                    </section>
                {{/if}}
            {{/is}}

            {{!-- Recent article block --}}
            {{#is settings.toggle_recently_viewed_article "yes"}}
                {{recent_articles}}
            {{/is}}
        </section>
    </section>
</div>

{{!-- Community button block --}}
{{#is settings.toggle_community_block "yes"}}
    <section class="submit-request-section community-image text-center">
        <div class="container">
            {{link 'community' class='btn btn-lg element-fade animate__animated'}}
            {{link 'new_request' class='submit-a-request btn btn-lg element-fade animate__animated'}}
        </div>
    </section>
{{/is}}

{{!-- Recent activity block --}}
{{#is settings.toggle_recent_activity "yes"}}
    <div class="container element-fade animate__animated">
        <section class="section home-section activity pt-80 mb-30 {{#is settings.toggle_community_block "no"}}pt-0{{/is}}">
            {{recent_activity}}
        </section>
    </div>
{{/is}}

